<h1>Liste des intervenants</h1>

<%# INCLURE BARRE DE RECHERCHE %>

<div>
  <% @intervenants.each do |intervenant| %>
  <div>
    <div>
    <%# CLOUDINARY ? %>
      <% if cl_image_tag intervenant.photo.present? %>
        <%= cl_image_tag intervenant.photo, height: 60, width: 60 %>
      <% else %>
        <i class="fa-duotone fa-user-tie-hair"></i>
      <% end %>
    </div>
    <div>
      <h2><%= intervenant.prenom.capitalize %> <%= intervenant.nom.capitalize %></h2>
      <p><%= intervenant.telephone %></p>
      <p><%= intervenant.email %></p>
      <%= link_to "Voir la fiche", intervenant_path %>
    </div>
  </div>
  <% end %>
</div>

