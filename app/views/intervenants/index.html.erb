<%# INCLURE BARRE DE RECHERCHE %>

<div class="card-intervenants">
  <% @intervenants.each do |intervenant| %>
  <div class="card-intervenant-mini">
    <div class="card-intervenant-img">
      <% if intervenant.photo.key %>
        <%= cl_image_tag intervenant.photo.key, width: 100, height: 100 %>
      <% else %>
        <i class="fa-solid fa-user-tie"></i>
      <% end %>
    </div>
    <div class="card-intervenant-txt">
      <h2><%= intervenant.prenom.capitalize %> <%= intervenant.nom.capitalize %></h2>
      <p><%= intervenant.telephone %></p>
      <p><%= intervenant.email %></p>
    </div>
    <div>
      <%= link_to "Voir la fiche", intervenant_path(intervenant), class: "btn-prim" %>
      <%= link_to "Supprimer l'intervenant", intervenant_path(intervenant), data: {turbo_method: :delete, turbo_confirm: "Etes-vous sÃ»r?"}, class: "btn-off" %>
    </div>
  </div>
  <% end %>
