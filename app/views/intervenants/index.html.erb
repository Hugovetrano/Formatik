<div class="intervenants">
<h1>Liste des intervenants</h1>

<%# INCLURE BARRE DE RECHERCHE %>

<div>
  <% @intervenants.each do |intervenant| %>
  <div class="card-intervenant-mini">
    <div class="card-intervenant-img">
      <% if intervenant.photo.key %>
        <%= cl_image_tag intervenant.photo.key, width: 60, height: 60 %>
      <% else %>
        <i class="fa-solid fa-user-tie"></i>
      <% end %>
    </div>
    <div class="card-intervenant-txt">
      <h2><%= intervenant.prenom.capitalize %> <%= intervenant.nom.capitalize %></h2>
      <p><%= intervenant.telephone %> <%= intervenant.email %></p>
    </div>
    <div>
      <%= link_to "Voir la fiche", intervenant_path(intervenant), class: "btn-intervenant" %>
      <%= link_to "Supprimer l'intervenant", intervenant_path(intervenant), data: {turbo_method: :delete, turbo_confirm: "Etes-vous sÃ»r?"}, class: "btn-intervenant" %>
    </div>
  </div>
  <% end %>
</div>

