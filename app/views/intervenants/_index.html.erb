<div class="apprenant-index">
  <div class="apprenant-table-container">
    <div class="apprenant-table-container-scrollable">
      <table>
        <thead>
          <th>Nom</th>
          <th>Prénom</th>
          <th>Téléphone</th>
          <th>Email</th>
        </thead>
        <tbody>
          <% Intervenant.all.order(:nom).each do |intervenant| %>
              <tr data-link="<%= intervenant_path(intervenant)%>" data-mesdonnees-search-bar-target="row" data-action="click->mesdonnees-search-bar#clicked">
                <td><%= intervenant.nom %></td>
                <td><%= intervenant.prenom %></td>
                <td><%= intervenant.telephone %></td>
                <td><%= intervenant.email %></td>
              </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  </div>
</div>
