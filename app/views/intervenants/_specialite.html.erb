<div class="apprenant-index">
  <div class="apprenant-table-container">
    <div class="apprenant-table-container-scrollable">
      <table>
        <thead>
          <th>Nom</th>
          <th>Prénom</th>
          <th>Spécialité</th>
        </thead>
        <tbody>
          <% Intervenant.all.order(:nom).each do |intervenant| %>
              <tr data-link="<%= intervenant_path(intervenant)%>" data-new-session-form-target="rowspecialty" data-action="click->new-session-form#clicked" data-value="<%= intervenant.id %>" >
                <td><%= intervenant.nom %></td>
                <td><%= intervenant.prenom %></td>
                <td><%= intervenant.specialite %></td>
              </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  </div>
</div>
